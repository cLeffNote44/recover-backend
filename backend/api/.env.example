# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/recover_backend
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_SSL=false

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Registration Keys
REGISTRATION_KEY_EXPIRY_HOURS=48
REGISTRATION_KEY_PREFIX=REC

# CORS
CORS_ORIGIN=http://localhost:5173,http://localhost:5000
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload (AWS S3)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BUCKET_NAME=recover-documents
S3_BUCKET_REGION=us-east-1

# WebSocket
SOCKET_IO_PATH=/api/v1/socket
SOCKET_IO_CORS_ORIGIN=http://localhost:5173

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=./logs/api.log

# Security
BCRYPT_ROUNDS=10
SESSION_TIMEOUT_MINUTES=30

# Email (for notifications - optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@recoversystem.com

# Push Notifications (FCM - optional)
FCM_SERVER_KEY=your-fcm-server-key

# Analytics Service (Python)
PYTHON_SERVICE_URL=http://localhost:8000

# Feature Flags
ENABLE_FAMILY_PORTAL=false
ENABLE_AI_INSIGHTS=true
ENABLE_AUDIT_LOGGING=true

# Super Admin (for initial setup)
SUPER_ADMIN_EMAIL=admin@recoversystem.com
SUPER_ADMIN_PASSWORD=SuperAdmin123!
